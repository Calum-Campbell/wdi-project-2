<h1><%=@user.name%>'s page</h1>
​
<%= image_tag @user.image, :size => '180x260'  %> </br>
​
<%= "Username: #{@user.username}"  %> </br>
<%= "Email: #{@user.email}"  %> </br> </br>
<%= "#{@user.name}'s bikes for rent :" %> </br>
<% bike_count = 0 %>
<% @user.bikes.each do |bike| %>
<% bike_count +=1 %>
<%= "Bike number #{bike_count}" %> </br>
<%= "Bike name:" %> <%= link_to " #{bike.name}", bike_path(bike)  %> </br>
<%= "Description: #{bike.description}"  %> </br> </br>
<% end %>

<%= "#{@user.name}'s bikes current rental status :" %> </br>
<% Booking.all.each do |booking| %> </br>
<% bikeid = booking.bike_id %> 
<% riderid = booking.rider_id %> 
<% bike = Bike.find(bikeid) %> 
<% rider = User.find(riderid) %> 

<% if bike.owner_id == @user.id  %> </br>
<%=  "Your bike '#{bike.name}' is booked out on #{booking.start_time} for #{booking.length} hours by #{rider.name}"%> </br>
 </br>
<% else %>
<%= "Non of your bikes currently have any bookings!" %>

<%end%>
<%end%> 
</br>
<%= "#{@user.name}'s rental bookings:"  %> </br>
<% count = 0 %>
<% @user.bookings.each do |booking| %>
<% count +=1 %>
<% bike = Bike.find(booking.bike_id) %>
<%= "Booking number #{count} :" %></br>
<%= "You have booked #{bike.name}, at: #{booking.start_time}, for #{booking.length} hours" %>
</br>
<% end %>


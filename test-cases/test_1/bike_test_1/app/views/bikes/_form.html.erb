<%= form_for @bike do |f| %>
  <%= render 'errors' %>
  <%= f.text_field 'name', placeholder: 'Bike Name'%> </br>
  <%= f.text_field 'short_description', placeholder: 'Short Bike Desciption'%> </br>
  <%= f.text_field 'description', placeholder: 'Bike Desciption'%> </br>
  <%= f.text_area 'image', placeholder: 'Bike Image URL'%> </br>
  <%= f.text_area 'address', placeholder: 'Bike drop off address'%> </br>
  
  <%=f.collection_check_boxes(:feature_ids, Feature.all, :id, :name) %>


  <%= f.submit 'Submit' %>
<% end %>
